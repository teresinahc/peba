db:
  image: mysql:5.6
  ports:
    - '3306'
  environment:
    - MYSQL_ALLOW_EMPTY_PASSWORD=true
  volumes:
    - ./data/db:/var/lib/mysql

es:
  image: elasticsearch
  volumes:
    - ./data/es:/usr/share/elasticsearch/data
  expose:
    - "9200"
    - "9300"

app:
  build: .
  command: bundle exec puma -C config/puma.rb
  volumes:
    - '.:/var/app'
  ports:
    - '3000:3000'
  links:
    - db
    - es
